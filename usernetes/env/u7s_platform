
function getPlatform() {
  source /etc/os-release
  if [ -n "$ALT_BRANCH_ID" ]
  then
    if [ "$ALT_BRANCH_ID"  == 'sisyphus' ]
    then
      export U7S_PLATFORM="test_k8s";
    else
      export U7S_PLATFORM="k8s-$ALT_BRANCH_ID"
    fi
  else
    ifs=$IFS
    IFS=:
    set -- $CPE_NAME
    IFS=$ifs
    platform=$4
    version=$5
    IFS=.
    set -- $version
    IFS=$ifs
    version=$1
    case $platform in
      spserver) export U7S_PLATFORM="k8s-c${bersion}f1"; break;;
      sisyphus) export U7S_PLATFORM="test_k8s"; break;;
      *) export U7S_PLATFORM="k8s-p${version}"; break;;
    esac
  fi
