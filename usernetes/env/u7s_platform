if [ -z "$U7S_PLATFORM" ]
then
  getPlatform
fi

if [ -z "$U7S_KUBEVERSION" ]
then
  case $U7S_PLATFORM in
    'test_k8s') export U7S_KUBEVERSION="v1.27.7";break;;
    'k8s-c10f1') export U7S_KUBEVERSION="v1.26.10";break;;
